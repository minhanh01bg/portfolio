import WindowsIcon from "../assets/stack/Windows.svg"
import MongoDbIcon from "../assets/stack/MongoDb.svg"
import DjangoIcon from "../assets/stack/Django.svg"

import StackWheel from "./react/Wheel"

const wheelItems = [
    {
        title: "JS/TS",
        icon: JsIcon.src,
        expLevel: 10
    },
    {
        title: "React",
        icon: ReactIcon.src,
        expLevel: 10
    },
    {
        title: "CSS",
        icon: CssIcon.src,
        expLevel: 10
    },
    {
        title: "HTML",
        icon: HtmlIcon.src,
        expLevel: 10
    },
    {
        title: "Golang",
        icon: GoIcon.src,
        expLevel: 10
    },
    {
        title: "Python",
        icon: PythonIcon.src,
        expLevel: 10
    },
    {
        title: "C",
        icon: CodeIcon.src,
        expLevel: 10
    },
    {
        title: "Rust",
        icon: RustIcon.src,
        expLevel: 3
    },
    {
        title: "Docker",
        icon: DockerIcon.src,
        expLevel: 10
    },
    {
        title: "Kubernetes",
        icon: KubernetesIcon.src,
        expLevel: 2
    },
    {
        title: "C#",
        icon: CSharpIcon.src,
        expLevel: 5
    },
    {
        title: "Java",
        icon: JavaIcon.src,
        expLevel: 1
    },
    {
        title: "Linux",
        icon: LinuxIcon.src,
        expLevel: 10
    },
    {
        title: "MySQL",
        icon: MysqlIcon.src,
        expLevel: 9
    },
    {
        title: "PostgreSQL",
        icon: PostgresqlIcon.src,
